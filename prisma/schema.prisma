generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  Firstname     String
  Lastname      String?
  // tweets    Tweet[]
  profileimageURL  String?
  // createdAt DateTime @default(now())
